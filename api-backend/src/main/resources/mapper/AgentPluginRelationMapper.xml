<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sspku.agent.module.agent.mapper.AgentPluginRelationMapper">

    <resultMap id="AgentPluginRelationMap" type="com.sspku.agent.module.agent.entity.AgentPluginRelation">
        <id column="id" property="id"/>
        <result column="agent_id" property="agentId"/>
        <result column="plugin_id" property="pluginId"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="config" property="config"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <delete id="deleteByAgentId">
        DELETE FROM agent_plugin_rel WHERE agent_id = #{agentId}
    </delete>

    <insert id="insertBatch">
        INSERT INTO agent_plugin_rel (agent_id, plugin_id, sort_order)
        VALUES
        <foreach collection="pluginIds" item="pluginId" index="idx" separator=",">
            (#{agentId}, #{pluginId}, #{idx})
        </foreach>
    </insert>

    <select id="selectPluginIdsByAgentId" resultType="long">
        SELECT plugin_id
        FROM agent_plugin_rel
        WHERE agent_id = #{agentId}
        ORDER BY sort_order ASC, id ASC
    </select>

    <select id="selectByAgentIds" resultMap="AgentPluginRelationMap">
        SELECT id, agent_id, plugin_id, sort_order, config, created_at, updated_at
        FROM agent_plugin_rel
        <where>
            <if test="agentIds != null and agentIds.size > 0">
                agent_id IN
                <foreach collection="agentIds" item="agentId" open="(" close=")" separator=",">
                    #{agentId}
                </foreach>
            </if>
            <if test="agentIds == null or agentIds.size == 0">
                1 = 0
            </if>
        </where>
        ORDER BY agent_id ASC, sort_order ASC, id ASC
    </select>

</mapper>
